{
  "manifest_version": 3,
  "name": "X-to-Blinko",
  "version": "1.0",
  "description": "Forward tweets to Blinko",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*",
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon.png"
      ],
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}